# Usage:
#
#   judge problem program.ext
. /etc/udge/conf
problemdir="$PROBLEMS_DIR/$1"
dirname=`dirname $0`
compileandtest=`realpath $dirname/compile-and-test`
program="$2"
tmpdir="`mktemp -d "/tmp/judge.XXXXXXXXXX"`"
cp "$program" "$tmpdir"
prog="`basename $program`"
(
cd $tmpdir
cator1() {
	[ -f "$1" ] &&
		cat $1 ||
		echo 1 # default score is 1
}
outof=0
total=0
for ts in $problemdir/[0-9]*; do
	pts=`cator1 $ts/pts`
	((outof+=$pts))
done
for ts in $problemdir/[0-9]*; do
	pts=`cator1 $ts/pts`
	dir=$ts "$compileandtest" $prog && ((total+=$pts)) || break
done
echo $total/$outof
)
rm -r $tmpdir
