# NOTE: if I eventually split this into two, I should probably keep this as an
# entry point, i.e.: this script calls both the compilation and test scripts
. /etc/udge/conf
errxit() {
	echo "$@"
	exit 1
}
cator1() {
	[ -f "$1" ] &&
		cat $1 ||
		echo 1 # default score is 1
}
src="$1"
dirname="`dirname $0`"
[ -n "$dir" ] || dir="$dirname"
what=compile
case "$src" in
	*.c)   lang=c  ;language="C"                      ;;
	*.hs)  lang=hs ;language="Haskell"                ;;
	*.py)  lang=py ;language="Python"   ;what="parse" ;;
	*)     errxit "No - compile: unknown file format" ;;
esac

main="$dir/main.$lang"
[ -f "$main" ] && lib=lib
"$dirname/compile/$lib/$lang" "$src" binary "$main" ||
errxit "No - $what error ($language)"


out=`mktemp /tmp/compile-and-test.XXXXXXXXXX`
rmerrxit() {
	rm $out
	errxit "$@"
}
in="$dir/in"
[ -f "$in" ] || in=/dev/null
timeout `cator1 "$dir/time-limit"`s ./binary < "$in" > "$out"
case $? in
	0)   ;;
	124) rmerrxit "No - time limit exceeded" ;;
	*)   rmerrxit "No - runtime error (non-zero exit code)" ;;
esac
check="$dirname/check-out"
[ -x "$dir/check-stdout" ] && check="$dir/check-stdout"
$check "$dir/sol" "$out" || rmerrxit "No - wrong output"
rm $out
