set -e
errxit() {
	echo "$@" >/dev/stderr
	usage
	exit 1
}
usage() {
	echo "usage: $0 source.lang binary [main.lang]" >/dev/stderr
}
src="$1"
dst="$2"
main="$3"
[ -n "$src" ] || errxit "$0: missing source file"
[ -n "$dst" ] || errxit "$0: missing destination file / binary"
