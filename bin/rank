#!/bin/bash
. /etc/udge/conf
errxit() {
	echo "$0, error: $@" >/dev/stderr
	exit 1
}
dirname="`dirname $0`"

i=0
j=0
for user in `$dirname/ls-users`
do
	$dirname/user-stats $user short
done |
sort -nr |
while read s1 s2 s3 s4 s5 user
do
	((i++))
	this="$s1 $s2 $s3 $s4 $s5"
	[ "$this" = "$prev" ] || j=$i
	printf "%s.  %-30s  %2s  %2s  %2s  %2s  %2s\n" $j $user $s1 $s2 $s3 $s4 $s5
	prev="$this"
done
