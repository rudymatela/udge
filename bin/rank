#!/bin/bash
prefix="$(dirname "$(dirname "$0")")"
. "$prefix/bin/utils/core"

i=0
j=0
for user in `ls-users`
do
	$bin/user-stats $user short
done |
sort -nr |
while read s1 s2 s3 s4 s5 user
do
	((i++))
	this="$s1 $s2 $s3 $s4 $s5"
	[ "$this" = "$prev" ] || j=$i
	printf "%s.  %-30s  %2s  %2s  %2s  %2s  %2s\n" $j $user $s1 $s2 $s3 $s4 $s5
	prev="$this"
done
