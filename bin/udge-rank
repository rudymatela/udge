#!/bin/bash
prefix="$(dirname "$(dirname "$0")")"
. "$prefix/lib/udge/core"

i=0
j=0
for user in `ls-users`
do
	$bin/udge-user-stats $user short
done |
# the multiple nk's here allow for negative numbers to be considered
sort -r -nk 1 -nk 2 -nk 3 -nk 4 -nk 5 -nk 6 |
while read s1 s2 s3 s4 s5 user
do
	((i++))
	this="$s1 $s2 $s3 $s4 $s5"
	[ "$this" = "$prev" ] || j=$i
	mkdir -p $RESULTS/$user
	echo $j > $RESULTS/$user/rank
	printf "%-3s  %-30s  %2s  %2s  %2s  %2s  %2s\n" $j. $user $s1 $s2 $s3 $s4 $s5
	prev="$this"
done
