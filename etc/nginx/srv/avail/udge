server {
	server_name
		udge.localdomain
		udge
		;

	root /srv/udge;

	location / {
		index index.html;
		try_files $uri $uri/index.html $uri.html =404;
	}

	location ~ \.html$ {
		return 404;
	}

	location ~ ./$ {
		return 404;
	}

	location = /submit {
		fastcgi_pass unix:/run/fcgiwrap.sock;
		fastcgi_param SCRIPT_FILENAME /path/to/cgi-bin/submit;
		include fastcgi_params;
	}

	location = /new-user {
		fastcgi_pass unix:/run/fcgiwrap.sock;
		fastcgi_param SCRIPT_FILENAME /path/to/cgi-bin/new-user;
		include fastcgi_params;
	}
}
