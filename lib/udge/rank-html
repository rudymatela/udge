#!/bin/bash
#
# usage: lib/udge/rank-html
prefix="$(dirname "$(dirname "$(dirname "$0")")")"
. "$prefix/lib/udge/core"
. "$lib/html"

html-header "User Rank - Udge"
html-navbar rank
echo "<h2>User Rank - Udge</h2>"
echo '<table class="table table-hover">'
echo '<thead>'
rs=' style="text-align: right"'
us=''
echo "<tr><th$rs>#</th><th$us>user</th><th$rs>=1</th><th$rs>&ge;⅔</th><th$rs>&ge;½</th><th$rs>&ge;⅓</th><th$rs>&gt;0</th></tr>"
echo '</thead>'
echo '<tbody>'
c='\([^ ]*\) *'
t="<td>"
r="<td$rs>"
T="</td>"
$bin/udge-rank | sed -e "s| *$c$c$c$c$c$c$c|<tr>$r\1$T$t<a href=\"/u/\2\">\2</a>$T$r\3$T$r\4$T$r\5$T$r\6$T$r\7$T</tr>|"
echo '</tbody>'
echo '</table>'
html-navbar rank
html-footer
